<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <HBox style="-fx-background-color: #273746;">
            <children>
                <ListView fx:id="dmListView" focusTraversable="false" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" style="-fx-background-color: #273746; -fx-control-inner-background: #273746;" />
            </children>
        </HBox>
    </left>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="chatListView" editable="true" focusTraversable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #d0d3d4;" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <TextArea fx:id="sendField" focusTraversable="false" maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="25.0" prefRowCount="2" promptText="Tippe um eine Nachricht zu Senden" style="-fx-background-color: #b2babb;" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendButton" alignment="CENTER" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="56.0" mnemonicParsing="false" text="Senden" textFill="WHITE">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                            <styleClass>
                                <String fx:value="btn" />
                                <String fx:value="sendButton" />
                            </styleClass>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
